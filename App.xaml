<Application x:Class="ComplexCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ComplexCalculator"
             StartupUri="View\MenuView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type local:CalculatorViewModel}">
            <local:CalculatorWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:MatrixViewModel}">
            <local:MatrixWindow/>
        </DataTemplate>        
    </Application.Resources>
</Application>
